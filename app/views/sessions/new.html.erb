
<%= form_tag '/login' do %>
  <div class="container">
    <h1>Login</h1>
    <br>
    <form>

      <div class="group">
        <%= text_field_tag :username %>
        <span class="highlight"></span>
        <span class="bar"></span>
        <label>Username</label>
      </div>

      <div class="group">
        <%= password_field_tag :password %>
        <span class="highlight"></span>
        <span class="bar"></span>
        <label>Password</label>
      </div>
      <p>Not registered yet? <%= link_to 'Register!', signup_path %> </p>
      <%= submit_tag "Login" %>
    </form>
  </div>
<% end %>
