
<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="container">
  <h1> Create a task</h1>
  <br>
  <br>
  <div class="group">
    <%= f.text_field :name %>
    <span class="highlight"></span>
    <span class="bar"></span>
    <label>Name</label>
  </div>
  <div class="group">
  <p style="color:#5264AE">Description</p>
    <%= f.text_area :description, size: "50x8" %>
    <span class="highlight"></span>
    <span class="bar"></span>
  </div>
  <div class="group">
  <p style="color:#5264AE">Test code</p>
    <%= f.text_area :test_code, size: "50x8" %>
    <span class="highlight"></span>
    <span class="bar"></span>
  </div>
  <div class="group">
  <p style="color:#5264AE">Base code</p>
    <%= f.text_area :base_code, size: "50x8" %>
    <span class="highlight"></span>
    <span class="bar"></span>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
</div>
<% end %>
